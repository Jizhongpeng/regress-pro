
ENABLE_RELEASE = no

CC = gcc
CXX = gcc -std=c++14

DEFS += -DHAVE_INLINE

ifeq ($(ENABLE_DEBUG),yes)
  DEFS = -DDEBUG -DDEBUG_MEM
  CFLAGS = -g -Wall
  CXXFLAGS = -g -Wall
else
  CFLAGS = -O3 -ffast-math -fomit-frame-pointer
  CXXFLAGS = -O3 -ffast-math -fomit-frame-pointer -fno-exceptions -fno-rtti
endif
